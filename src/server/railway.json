{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm ci --prefix src/server && npm run build --prefix src/server"
  },
  "deploy": {
    "startCommand": "npm run start --prefix src/server",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health"
  }
}


