{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "services/**/*",
    "middleware/**/*",
    "routes/**/*",
    "templates/**/*",
    "types/**/*",
    "global.d.ts",
    "src/server/global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "uploads"]
}
